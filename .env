# Environment variables for the entire stack
# Copy this to .env and update with your values

# Database Configuration
DB_HOST=mysql-db
DB_PORT=3307
DB_USER=lms_user
DB_PASSWORD=your_secure_mysql_password_here
DB_NAME=lms_db

# Redis Configuration
REDIS_HOST=redis-cache
REDIS_PORT=6379

# JWT Configuration
JWT_SECRET=your_very_secure_jwt_secret_key_here_at_least_32_characters

# Google OAuth Configuration (required for backend)
GOOGLE_CLIENT_ID=312655720270-prcea14eek4i0abj09acomparvsipsq6.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# ML Service Configuration
ML_SERVICE_URL=http://ml-service:8000

# Node.js Configuration
NODE_ENV=production

# Flask Configuration
FLASK_ENV=production

# Logging
LOG_LEVEL=INFO

# Optional: Domain name for production
# DOMAIN_NAME=your-domain.com

# Optional: Email configuration for notifications
# SMTP_HOST=smtp.gmail.com
